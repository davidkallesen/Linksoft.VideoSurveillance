@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Class="mr-2" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <video controls autoplay style="width: 100%; max-height: 70vh;" src="@VideoUrl"></video>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string VideoUrl { get; set; } = string.Empty;

    [Parameter]
    public string Title { get; set; } = "Recording Playback";

    private void Close() => MudDialog.Cancel();
}