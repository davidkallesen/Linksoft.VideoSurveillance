<MudText Typo="Typo.subtitle1" Class="mb-2">Analysis</MudText>
<MudNumericField @bind-Value="State.MotionSensitivity" Label="Sensitivity" Min="1" Max="100" Class="mt-2" />
<MudNumericField @bind-Value="State.MinimumChangePercent" Label="Minimum Change (%)" Min="0.01" Max="100.0" Step="0.1" Class="mt-2" />
<MudNumericField @bind-Value="State.AnalysisFrameRate" Label="Analysis Frame Rate" Min="1" Max="30" Class="mt-2" />
<MudNumericField @bind-Value="State.AnalysisWidth" Label="Analysis Width" Min="80" Max="1920" Class="mt-2" />
<MudNumericField @bind-Value="State.AnalysisHeight" Label="Analysis Height" Min="60" Max="1080" Class="mt-2" />
<MudNumericField @bind-Value="State.PostMotionDurationSeconds" Label="Post Motion Duration (seconds)" Min="1" Max="60" Class="mt-2" />
<MudNumericField @bind-Value="State.CooldownSeconds" Label="Cooldown (seconds)" Min="0" Max="60" Class="mt-2" />

<MudDivider Class="my-4" />

<MudText Typo="Typo.subtitle1" Class="mb-2">Bounding Box</MudText>
<MudCheckBox @bind-Value="State.BoundingBoxShowInGrid" Label="Show in grid view" Class="mt-2" />
<MudCheckBox @bind-Value="State.BoundingBoxShowInFullScreen" Label="Show in full screen" Class="mt-2" />
<MudTextField @bind-Value="State.BoundingBoxColor" Label="Color" Class="mt-2" />
<MudNumericField @bind-Value="State.BoundingBoxThickness" Label="Thickness" Min="1" Max="10" Class="mt-2" />
<MudNumericField @bind-Value="State.BoundingBoxMinArea" Label="Min Area (pixels)" Min="10" Max="10000" Class="mt-2" />
<MudNumericField @bind-Value="State.BoundingBoxPadding" Label="Padding (pixels)" Min="0" Max="100" Class="mt-2" />

<MudText Class="mt-4 mb-1">Smoothing: @State.BoundingBoxSmoothing.ToString("F2")</MudText>
<MudSlider @bind-Value="State.BoundingBoxSmoothing" Min="0.0" Max="1.0" Step="0.05" />

@code {
    [Parameter, EditorRequired]
    public SettingsState State { get; set; } = null!;
}