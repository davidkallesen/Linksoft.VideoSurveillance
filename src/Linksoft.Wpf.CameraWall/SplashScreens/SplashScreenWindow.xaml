<atc:NiceWindow
    x:Class="Linksoft.Wpf.CameraWall.SplashScreens.SplashScreenWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dependencyObjects="clr-namespace:Atc.Wpf.DependencyObjects;assembly=Atc.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:splashScreens="clr-namespace:Linksoft.Wpf.CameraWall.SplashScreens"
    Title="Loading..."
    Width="450"
    Height="200"
    d:DataContext="{d:DesignInstance Type=splashScreens:SplashScreenWindow,
                                     IsDesignTimeCreatable=False}"
    Background="#FF252526"
    BorderBrush="#FF3F3F46"
    BorderThickness="2"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <atc:GridEx Margin="20" Rows="Auto,*,Auto,Auto">

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="SemiBold"
            Foreground="#FF0078D7"
            Text="{Binding Path=Header, FallbackValue='Linksoft Camera Wall'}">
            <TextBlock.Effect>
                <DropShadowEffect
                    BlurRadius="8"
                    Opacity="0.3"
                    ShadowDepth="0"
                    Color="Black" />
            </TextBlock.Effect>
        </TextBlock>

        <!--  Version  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="12"
            Foreground="#FF888888"
            Text="{Binding Path=VersionText, FallbackValue='Version 1.0.0.0'}" />

        <!--  Loading LabelTextInfo  -->
        <Label
            Grid.Row="2"
            Margin="0,10,0,10"
            HorizontalAlignment="Center"
            Background="Transparent"
            Content="{Binding Source={x:Static dependencyObjects:MessageListener.Instance}, Path=Message, FallbackValue='Initializing...'}" />

        <!--  ProgressBar  -->
        <ProgressBar
            Grid.Row="3"
            Height="10"
            IsIndeterminate="False"
            Maximum="100"
            Minimum="0"
            Value="{Binding Source={x:Static dependencyObjects:PercentListener.Instance}, Path=Percent, FallbackValue=0}" />

    </atc:GridEx>
</atc:NiceWindow>