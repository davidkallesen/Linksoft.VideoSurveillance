<!--  ReSharper disable once Xaml.RedundantResource  -->
<UserControl
    x:Class="Linksoft.Wpf.CameraWall.UserControls.CameraOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  Blinking animation for recording indicator  -->
        <Storyboard x:Key="RecordingBlinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                AutoReverse="True"
                Storyboard.TargetProperty="Opacity"
                From="1.0"
                To="0.3"
                Duration="0:0:0.5" />
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Border
            Padding="8,4"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#99000000"
            CornerRadius="4"
            Opacity="{Binding Path=OverlayOpacity, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    x:Name="TitleTextBlock"
                    MaxWidth="180"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding Path=Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    TextTrimming="CharacterEllipsis"
                    Visibility="{Binding Path=ShowTitle, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <TextBlock
                    x:Name="DescriptionTextBlock"
                    MaxWidth="180"
                    FontSize="10"
                    Foreground="#CCCCCC"
                    Text="{Binding Path=Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=ShowDescription, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Description, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Description, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock
                    x:Name="TimeTextBlock"
                    FontSize="10"
                    Foreground="#CCCCCC"
                    Text="{Binding Path=CurrentTime, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Visibility="{Binding Path=ShowTime, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!--  Connection status row  -->
                <StackPanel Orientation="Horizontal" Visibility="{Binding Path=ShowConnectionStatus, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Ellipse
                        x:Name="StatusIndicator"
                        Width="8"
                        Height="8"
                        Margin="0,0,4,0"
                        Fill="{Binding Path=StatusColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <TextBlock
                        x:Name="StatusTextBlock"
                        FontSize="9"
                        Foreground="#AAAAAA"
                        Text="{Binding Path=StatusText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>

                <!--  Recording indicator row  -->
                <StackPanel x:Name="RecordingIndicator" Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <!--  Show when recording  -->
                                <DataTrigger Binding="{Binding Path=IsRecording, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <!--  Also show when motion recording is enabled (reserves space)  -->
                                <DataTrigger Binding="{Binding Path=EnableRecordingOnMotion, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Ellipse
                        x:Name="RecordingDot"
                        Width="8"
                        Height="8"
                        Margin="0,0,4,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsRecording, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Fill" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock
                        x:Name="RecordingDurationTextBlock"
                        FontSize="10"
                        FontWeight="SemiBold"
                        Text="{Binding Path=RecordingDurationText, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#44AAAAAA" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsRecording, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!--  Motion detection indicator row  -->
                <StackPanel Orientation="Horizontal">
                    <Ellipse
                        x:Name="MotionIndicator"
                        Width="8"
                        Height="8"
                        Margin="0,0,4,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMotionDetected, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Fill" Value="Orange" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock FontSize="9" Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Motion}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#44AAAAAA" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMotionDetected, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Foreground" Value="Orange" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>