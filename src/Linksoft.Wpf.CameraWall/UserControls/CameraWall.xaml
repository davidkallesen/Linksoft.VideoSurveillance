<UserControl x:Class="Linksoft.Wpf.CameraWall.UserControls.CameraWall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
             xmlns:local="clr-namespace:Linksoft.Wpf.CameraWall.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="480"
             d:DesignWidth="640"
             Background="#1E1E1E">

    <Grid>
        <ItemsControl x:Name="CameraItemsControl"
                      ItemsSource="{Binding Path=CameraTiles, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      AllowDrop="True"
                      Background="Transparent">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid x:Name="CameraGrid"
                                 Rows="{Binding Path=GridRowCount, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:CameraTile Camera="{Binding}"
                                      Margin="1"
                                      AllowDrop="True"
                                      MouseMove="CameraTile_MouseMove"
                                      DragOver="CameraTile_DragOver"
                                      Drop="CameraTile_Drop"
                                      FullScreenRequested="CameraTile_FullScreenRequested"
                                      SwapLeftRequested="CameraTile_SwapLeftRequested"
                                      SwapRightRequested="CameraTile_SwapRightRequested"
                                      ConnectionStateChanged="CameraTile_ConnectionStateChanged"
                                      EditCameraRequested="CameraTile_EditCameraRequested"
                                      DeleteCameraRequested="CameraTile_DeleteCameraRequested" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Empty State Message -->
        <TextBlock x:Name="EmptyStateText"
                   Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=NoCamerasConfigured}"
                   Foreground="#888888"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed" />
    </Grid>
</UserControl>
