<atc:NiceWindow
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.AssignCameraDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Path=DialogTitle}"
    Width="600"
    Height="400"
    MinWidth="500"
    MinHeight="300"
    d:DataContext="{d:DesignInstance Type=dialogs:AssignCameraDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <atc:GridEx Margin="16" Rows="Auto,*,Auto">

        <!--  Layout Name Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,16"
            HorizontalAlignment="Center"
            FontSize="22"
            FontWeight="SemiBold"
            Text="{Binding Path=LayoutName}" />

        <!--  Dual List Area  -->
        <atc:GridEx
            Grid.Row="1"
            Columns="*,Auto,*,Auto"
            Rows="Auto,*">

            <!--  Available Cameras Header  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,8"
                FontWeight="SemiBold"
                Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                           Key=AvailableCameras}" />

            <!--  Available Cameras List  -->
            <ListBox
                x:Name="AvailableListBox"
                Grid.Row="1"
                Grid.Column="0"
                DisplayMemberPath="DisplayName"
                ItemsSource="{Binding Path=AvailableCameras}"
                SelectionChanged="OnAvailableSelectionChanged"
                SelectionMode="Extended" />

            <!--  Move Buttons  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="12,0"
                VerticalAlignment="Center">
                <Button
                    Width="40"
                    Height="32"
                    Margin="0,4"
                    Command="{Binding Path=MoveAllToAssignedCommand}"
                    Content="&gt;&gt;"
                    ToolTip="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                  Key=MoveAllToAssigned}" />
                <Button
                    Width="40"
                    Height="32"
                    Margin="0,4"
                    Command="{Binding Path=MoveToAssignedCommand}"
                    Content="&gt;"
                    ToolTip="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                  Key=MoveToAssigned}" />
                <Button
                    Width="40"
                    Height="32"
                    Margin="0,4"
                    Command="{Binding Path=MoveToAvailableCommand}"
                    Content="&lt;"
                    ToolTip="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                  Key=MoveToAvailable}" />
                <Button
                    Width="40"
                    Height="32"
                    Margin="0,4"
                    Command="{Binding Path=MoveAllToAvailableCommand}"
                    Content="&lt;&lt;"
                    ToolTip="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                  Key=MoveAllToAvailable}" />
            </StackPanel>

            <!--  Assigned Cameras Header  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,0,0,8"
                FontWeight="SemiBold"
                Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                           Key=AssignedToLayout}" />

            <!--  Assigned Cameras List  -->
            <ListBox
                x:Name="AssignedListBox"
                Grid.Row="1"
                Grid.Column="2"
                DisplayMemberPath="DisplayName"
                ItemsSource="{Binding Path=AssignedCameras}"
                SelectionChanged="OnAssignedSelectionChanged"
                SelectionMode="Extended" />

            <!--  Reorder Buttons  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="3"
                Margin="8,0,0,0"
                VerticalAlignment="Center">
                <Button
                    Width="32"
                    Height="32"
                    Margin="0,4"
                    Command="{Binding Path=MoveUpCommand}"
                    Content="▲"
                    ToolTip="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                  Key=MoveUp}" />
                <Button
                    Width="32"
                    Height="32"
                    Margin="0,4"
                    Command="{Binding Path=MoveDownCommand}"
                    Content="▼"
                    ToolTip="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                  Key=MoveDown}" />
            </StackPanel>
        </atc:GridEx>

        <!--  Dialog Buttons  -->
        <atc:UniformSpacingPanel
            Grid.Row="2"
            Margin="0,16,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                MinWidth="80"
                Padding="16,8"
                Command="{Binding Path=OkCommand}"
                Content="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                              Key=Ok}"
                IsDefault="True" />
            <Button
                MinWidth="80"
                Padding="16,8"
                Command="{Binding Path=CancelCommand}"
                Content="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                              Key=Cancel}"
                IsCancel="True" />
        </atc:UniformSpacingPanel>
    </atc:GridEx>
</atc:NiceWindow>
