<atc:NiceWindow
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs.Parts.Settings"
    Title="{Binding Path=DialogTitle}"
    Width="800"
    Height="600"
    MinWidth="600"
    MinHeight="500"
    d:DataContext="{d:DesignInstance Type=dialogs:SettingsDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">

    <atc:NiceWindow.Resources>
        <Style BasedOn="{StaticResource {x:Type GroupBox}}" TargetType="GroupBox">
            <Setter Property="Padding" Value="10,10,20,20" />
        </Style>
    </atc:NiceWindow.Resources>

    <atc:GridEx Margin="16" Rows="*,Auto">

        <!--  Tabbed Settings  -->
        <TabControl
            Grid.Row="0"
            BorderThickness="0"
            TabStripPlacement="Left">

            <!--  General Tab  -->
            <TabItem Width="180" Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=General}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:GeneralAppearanceSettings />
                        <settings:GeneralStartupSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Camera Display Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=CameraDisplay}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:CameraDisplayOverlaySettings />
                        <settings:CameraDisplayGridLayoutSettings />
                        <settings:CameraDisplaySnapshotSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Connection Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Connection}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:ConnectionDefaultCameraSettings />
                        <settings:ConnectionConnectionSettings />
                        <settings:ConnectionNotificationsSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Performance Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Performance}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:PerformanceVideoSettings />
                        <settings:PerformanceStreamingSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Motion Detection Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=MotionDetection}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:MotionDetectionAnalysisSettings />
                        <settings:MotionDetectionBoundingBoxSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Capture Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Capture}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:CaptureRecordingSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Timelapse Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Timelapse}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:TimelapseSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Storage Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Storage}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:RecordingSegmentationSettings />
                        <settings:RecordingMediaCleanupSettings />
                        <settings:RecordingPlaybackOverlaySettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Advanced Tab  -->
            <TabItem Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Advanced}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <settings:AdvancedLoggingSettings />
                        <settings:AdvancedMaintenanceSettings />
                    </atc:UniformSpacingPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!--  Dialog Buttons  -->
        <atc:UniformSpacingPanel
            Grid.Row="1"
            Margin="0,16,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                MinWidth="80"
                Padding="16,8"
                Command="{Binding Path=SaveCommand}"
                Content="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                              Key=Save}"
                IsDefault="True" />
            <Button
                MinWidth="80"
                Padding="16,8"
                Command="{Binding Path=CancelCommand}"
                Content="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                              Key=Cancel}"
                IsCancel="True" />
        </atc:UniformSpacingPanel>
    </atc:GridEx>
</atc:NiceWindow>
