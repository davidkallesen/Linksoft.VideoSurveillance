<atc:NiceWindow
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                Key=AboutLinksoftCameraWall}"
    Width="420"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <atc:GridEx Margin="24" Rows="Auto,Auto,Auto,Auto,Auto">

        <!--  Application Title  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Linksoft Camera Wall" />

        <!--  Version  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,16,0,0"
            FontSize="14">
            <Run Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Version}" />
            <Run Text=": " />
            <Run x:Name="VersionRun" />
        </TextBlock>

        <!--  Description (with word wrap)  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,16,0,0"
            FontSize="13"
            Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                       Key=ApplicationDescription}"
            TextWrapping="Wrap" />

        <!--  Copyright  -->
        <TextBlock
            Grid.Row="3"
            Margin="0,16,0,0"
            FontSize="12">
            <Run Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Copyright}" />
            <Run Text=" " />
            <Run x:Name="YearRun" />
            <Run Text=" Linksoft. " />
            <Run Text="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=AllRightsReserved}" />
        </TextBlock>

        <!--  OK Button  -->
        <Button
            Grid.Row="4"
            MinWidth="80"
            Margin="0,24,0,0"
            Padding="16,8"
            HorizontalAlignment="Center"
            Click="OnOkClick"
            Content="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                          Key=Ok}"
            IsDefault="True" />
    </atc:GridEx>
</atc:NiceWindow>
