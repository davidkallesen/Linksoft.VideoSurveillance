<UserControl
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.Parts.Settings.RecordingPlaybackOverlaySettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=dialogs:SettingsDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <GroupBox Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=PlaybackOverlaySettings}">
        <StackPanel Margin="0,5,0,-20" Orientation="Vertical">

            <StackPanel Orientation="Horizontal">
                <atc:LabelToggleSwitch
                    VerticalAlignment="Center"
                    IsOn="{Binding Path=ShowPlaybackFilename, Mode=TwoWay}"
                    LabelPosition="Right"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=ShowPlaybackFilename}" />

                <atc:LabelWellKnownColorSelector
                    IsEnabled="{Binding Path=ShowPlaybackFilename}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=PlaybackFilenameColor}"
                    Orientation="Vertical"
                    SelectedKey="{Binding Path=SelectedPlaybackFilenameColor, Mode=TwoWay}"
                    UseOnlyBasicColors="True" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <atc:LabelToggleSwitch
                    VerticalAlignment="Center"
                    IsOn="{Binding Path=ShowPlaybackTimestamp, Mode=TwoWay}"
                    LabelPosition="Right"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=ShowPlaybackTimestamp}" />

                <atc:LabelWellKnownColorSelector
                    IsEnabled="{Binding Path=ShowPlaybackTimestamp}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=PlaybackTimestampColor}"
                    Orientation="Vertical"
                    SelectedKey="{Binding Path=SelectedPlaybackTimestampColor, Mode=TwoWay}"
                    UseOnlyBasicColors="True" />
            </StackPanel>

        </StackPanel>
    </GroupBox>
</UserControl>
