<UserControl
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.Parts.Settings.CameraDisplayOverlaySettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=dialogs:SettingsDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <GroupBox Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=OverlaySettings}">
        <StackPanel Margin="0,5,0,-20" Orientation="Vertical">

            <atc:LabelToggleSwitch
                IsOn="{Binding Path=ShowCameraOverlayTitle, Mode=TwoWay}"
                LabelPosition="Right"
                LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                Key=ShowCameraOverlayTitle}" />

            <atc:LabelToggleSwitch
                IsOn="{Binding Path=ShowCameraOverlayDescription, Mode=TwoWay}"
                LabelPosition="Right"
                LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                Key=ShowCameraOverlayDescription}" />

            <atc:LabelToggleSwitch
                IsOn="{Binding Path=ShowCameraOverlayTime, Mode=TwoWay}"
                LabelPosition="Right"
                LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                Key=ShowCameraOverlayTime}" />

            <atc:LabelToggleSwitch
                IsOn="{Binding Path=ShowCameraOverlayConnectionStatus, Mode=TwoWay}"
                LabelPosition="Right"
                LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                Key=ShowCameraOverlayConnectionStatus}" />

            <atc:LabelComboBox
                Items="{Binding Path=OverlayOpacityItems}"
                LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                Key=OverlayOpacity}"
                Orientation="Vertical"
                SelectedKey="{Binding Path=SelectedOverlayOpacity, Mode=TwoWay}" />

            <atc:LabelComboBox
                Items="{Binding Path=OverlayPositionItems}"
                LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                Key=DefaultOverlayPosition}"
                Orientation="Vertical"
                SelectedKey="{Binding Path=SelectedOverlayPosition, Mode=TwoWay}" />

        </StackPanel>
    </GroupBox>
</UserControl>