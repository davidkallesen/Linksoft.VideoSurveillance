<UserControl
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.Parts.Settings.AdvancedMaintenanceSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=dialogs:SettingsDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <GroupBox Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations, Key=Maintenance}">
        <StackPanel Margin="0,0,0,-20" Orientation="Vertical">

            <Button
                Margin="10,10,10,20"
                Padding="16,8"
                HorizontalAlignment="Left"
                Command="{Binding Path=RestoreDefaultsCommand}"
                Content="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                              Key=RestoreDefaults}" />

        </StackPanel>
    </GroupBox>
</UserControl>
