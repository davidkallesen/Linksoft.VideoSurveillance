<UserControl
    x:Class="Linksoft.Wpf.CameraWall.Dialogs.Parts.CameraConfigurations.MotionDetectionOverridesPart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Linksoft.Wpf.CameraWall.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueConverters="clr-namespace:Atc.Wpf.ValueConverters;assembly=Atc.Wpf"
    d:DataContext="{d:DesignInstance Type=dialogs:CameraConfigurationDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="1100"
    mc:Ignorable="d">

    <GroupBox
        atc:HeaderedControlHelper.HeaderBackground="Transparent"
        atc:HeaderedControlHelper.HeaderFontWeight="Bold"
        atc:HeaderedControlHelper.HeaderForeground="{DynamicResource AtcApps.Brushes.Text}"
        Header="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                     Key=MotionOverrides}">
        <atc:GridEx
            Margin="10"
            Columns="*,20,*,20,*"
            Rows="Auto,16,Auto,16,Auto">
            <!--  Row 0, Column 0 - Motion Sensitivity (already in RecordingOverridesPart)  -->
            <!--  Row 0, Column 0 - Minimum Change Percent  -->
            <StackPanel Grid.Row="0" Grid.Column="0">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultMinimumChangePercent, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelDecimalBox
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultMinimumChangePercent, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=MinimumChangePercent}"
                    LabelWidthNumber="220"
                    Maximum="100"
                    Minimum="0.1"
                    Value="{Binding Path=OverrideMinimumChangePercent, Mode=TwoWay}" />
            </StackPanel>
            <!--  Row 0, Column 2 - Analysis Frame Rate  -->
            <StackPanel Grid.Row="0" Grid.Column="2">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultAnalysisFrameRate, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelIntegerBox
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultAnalysisFrameRate, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=AnalysisFrameRate}"
                    LabelWidthNumber="220"
                    Maximum="30"
                    Minimum="1"
                    Value="{Binding Path=OverrideAnalysisFrameRate, Mode=TwoWay}" />
            </StackPanel>
            <!--  Row 0, Column 4 - Cooldown Seconds  -->
            <StackPanel Grid.Row="0" Grid.Column="4">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultCooldownSeconds, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelIntegerBox
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultCooldownSeconds, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=CooldownSeconds}"
                    LabelWidthNumber="220"
                    Maximum="300"
                    Minimum="0"
                    Value="{Binding Path=OverrideCooldownSeconds, Mode=TwoWay}" />
            </StackPanel>
            <!--  Row 2, Column 0 - Show Bounding Box in Grid  -->
            <StackPanel Grid.Row="2" Grid.Column="0">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultShowBoundingBoxInGrid, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=OverrideShowBoundingBoxInGrid, Mode=TwoWay}"
                    IsEnabled="{Binding Path=UseDefaultShowBoundingBoxInGrid, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=ShowBoundingBoxInGrid}"
                    LabelWidthNumber="220" />
            </StackPanel>
            <!--  Row 2, Column 2 - Show Bounding Box in Full Screen  -->
            <StackPanel Grid.Row="2" Grid.Column="2">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultShowBoundingBoxInFullScreen, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=OverrideShowBoundingBoxInFullScreen, Mode=TwoWay}"
                    IsEnabled="{Binding Path=UseDefaultShowBoundingBoxInFullScreen, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=ShowBoundingBoxInFullScreen}"
                    LabelWidthNumber="220" />
            </StackPanel>
            <!--  Row 2, Column 4 - Bounding Box Color  -->
            <StackPanel Grid.Row="2" Grid.Column="4">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultBoundingBoxColor, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelWellKnownColorSelector
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultBoundingBoxColor, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=BoundingBoxColor}"
                    LabelWidthNumber="220"
                    SelectedKey="{Binding Path=OverrideBoundingBoxColor, Mode=TwoWay}" />
            </StackPanel>
            <!--  Row 4, Column 0 - Bounding Box Thickness  -->
            <StackPanel Grid.Row="4" Grid.Column="0">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultBoundingBoxThickness, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelComboBox
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultBoundingBoxThickness, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    Items="{Binding Path=BoundingBoxThicknessItems}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=BoundingBoxThickness}"
                    LabelWidthNumber="220"
                    SelectedKey="{Binding Path=OverrideBoundingBoxThickness, Mode=TwoWay}" />
            </StackPanel>
            <!--  Row 4, Column 2 - Bounding Box Min Area  -->
            <StackPanel Grid.Row="4" Grid.Column="2">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultBoundingBoxMinArea, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelComboBox
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultBoundingBoxMinArea, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    Items="{Binding Path=BoundingBoxMinAreaItems}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=BoundingBoxMinArea}"
                    LabelWidthNumber="220"
                    SelectedKey="{Binding Path=OverrideBoundingBoxMinArea, Mode=TwoWay}" />
            </StackPanel>
            <!--  Row 4, Column 4 - Analysis Resolution  -->
            <StackPanel Grid.Row="4" Grid.Column="4">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding Path=UseDefaultAnalysisResolution, Mode=TwoWay}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=UseDefaultSetting}"
                    LabelWidthNumber="220" />
                <atc:LabelComboBox
                    HideAreas="All"
                    IsEnabled="{Binding Path=UseDefaultAnalysisResolution, Converter={x:Static valueConverters:BoolToInverseBoolValueConverter.Instance}}"
                    Items="{Binding Path=AnalysisResolutionItems}"
                    LabelText="{atcTranslation:Resx ResxName=Linksoft.Wpf.CameraWall.Resources.Translations,
                                                    Key=AnalysisResolution}"
                    LabelWidthNumber="220"
                    SelectedKey="{Binding Path=OverrideAnalysisResolution, Mode=TwoWay}" />
            </StackPanel>
        </atc:GridEx>
    </GroupBox>
</UserControl>
