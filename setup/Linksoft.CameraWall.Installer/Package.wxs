<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package
    Name="Linksoft Camera Wall"
    Manufacturer="Linksoft"
    Version="!(bind.FileVersion.CameraWallExe)"
    UpgradeCode="E5A8B4C1-9D2F-4E3A-8B7C-6D5E4F3A2B1C"
    Scope="perMachine">

    <MajorUpgrade
      DowngradeErrorMessage="A newer version of [ProductName] is already installed."
      AllowSameVersionUpgrades="yes" />

    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" Title="Linksoft Camera Wall" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="DesktopShortcut" />
    </Feature>

    <Icon Id="CameraWallIcon" SourceFile="$(HarvestDirectory)\cctv-camera.ico" />
    <Property Id="ARPPRODUCTICON" Value="CameraWallIcon" />
    <Property Id="ARPHELPLINK" Value="https://github.com/davidkallesen/Linksoft.CameraWall" />

    <WixVariable Id="WixUILicenseRtf" Value="License.rtf" />
    <ui:WixUI Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

  </Package>
</Wix>
